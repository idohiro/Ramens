<h1>follower Users</h1>

  <% if @customers.count ==0 %>
  <p>フォロワーがいません</p>
  <% else  %>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
       <td>フォロー数：<%= customer.followings.count %></td>
        <td>フォロワー数：<%= customer.followers.count %></td>
        <td><%= link_to 'Show', public_customer_path(customer.id), class: "user_#{customer.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
