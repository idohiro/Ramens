<div class="container px-5 px-sm-0">
    <div class="row">
        <div class = "col-sm-3"></div>
        <div class="col-sm-2">
               <h2 class="item-title-name">商品詳細</h2>

            <%#= image_tag @item.get_item_image(200, 200) %>
        </div>
        <div class = "col-sm-1"></div>
        <div class = "col-sm-4 item-show-text">
            <table class = "show">
            <tbody>
                <tr class = "none">
                    <th class = "none">商品名</th>
                    <th class = "none"><%= @ramen.name %></th>
                </tr>
                <tr class = "none">
                    <th class = "none">商品説明</th>
                    <th class = "none"><%= @ramen.introduction %></th>
                </tr>
                <tr class = "none">
                    <th class = "none">店名</th>
                    <th class = "none"><%= @ramen.shop_name %></th>
                </tr>
                <tr class = "none">
                    <th class = "none">詳細情報</th>
                    <th class = "none"></th>
                </tr>

                <tr class = "none">
                    <th class = "none">税込価格</th>
                    <th class = "none"><%= @ramen.price %>円</th>
                </tr>
                <tr class = "none">
                    <th class = "none">
                        <div class = "edit">
                            <%= link_to "編集する", edit_public_ramen_path(@ramen.id), class: "btn btn-success" %>
                        </div>
                        <div class = "destroy">
                            <%= link_to "削除する", edit_public_ramen_path(@ramen.id), class: "btn btn-errors" %>
                        </div>
                    </th>
                </tr>
            </tbody>
            </table>

        </div>
    </div>
</div>