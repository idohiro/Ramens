<div class="container">
    <div class = "red">
        <% if @ramen.errors.any? %>
          <%= @ramen.errors.count %>件のエラーが発生しました
          <ul>
            <% @ramen.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2 class = "item-title-name">新規登録</h2>
            <%= form_with model: @ramen, url:public_ramens_path, local:true do |f| %>
                <div class="form-group">
                    <label for="item_name">商品名</label>
                    <%= f.text_field :name, class:"form-control name" %>
                </div>
                <!--<div class="form-group">-->
                <!--    <label for="item_image">商品画像</label>-->
                <!--    <%#= f.file_field :item_image, accept: "image/*", class:"form-control-file item_image" %>-->
                <!--</div>-->
                <div class="form-group">
                    <label for="item_introduction">商品紹介</label>
                    <%= f.text_area :introduction, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <label for="item_introduction">店名</label>
                    <%= f.text_area :shop_name, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <label for="item_introduction">商品紹介</label>
                    <%= f.text_area :limited_information, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <label for="item_price">価格</label>
                    <%= f.number_field :price, class:"form-control name" %>
                </div>
                <div>
                    <label for="item_price">限定情報</label>
                    <%= f.text_area :limited_information, class:"form-control name" %>
                    </div>
                <div class="item-edit-btn">
                    <%= f.submit '新規登録', class:"btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>

