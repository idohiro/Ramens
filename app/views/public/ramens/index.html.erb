<div class = "container-sm" >
    <div class = "row">
        <div class ="title-name">
            <h2 style="display:inline">商品一覧 </h2>
        </div>
    </div>

    <div class ="row">

        <% @ramens.each do |ramen| %>

            <div class="index-card">
                <%= link_to public_ramen_path(ramen.id), {class: "link"} do %>
                    <div class = "index-body">
                        <%#= image_tag item.get_item_image(150, 150) %>
                    </div>
                    <div class="index-title">
                        <label for="ramen_introduction"> 商品名</label>
                        <%= ramen.name %>
                    </div>
                    <div class="index-title">
                        <%= ramen.price %>円（税抜き）
                    </div>
                     <div class="index-title">
                        <label for="ramen_introduction"> 詳細</label>
                        <%= ramen.introduction %>
                    </div>
                     <div class="index-title">
                          <label for="ramen_introduction"> 店名</label>
                        <%= ramen.shop_name %>
                    </div>
                     <div class="index-title">
                       <label for="ramen_introduction">限定情報</label>
                        <%= ramen.limited_information %>
                    </div>

                <% end %>
            </div>

        <% end %>
    </div>
<%#= paginate @ramens %>
</div>
