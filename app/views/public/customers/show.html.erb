<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2 class="item-title-name">マイページ</h2>
       <div class = "customer-show-title">
            <h3 style="display:inline">登録情報</h3>
            <span style="display:inline"> <%= link_to edit_public_customer_path(@customer),class: "btn btn-success edit_public_customer_#{@customer.id}" do %> 編集する<% end %></span>
       </div>
       <div class = "customer-show">
          <table class="table">
               <tbody>
                  <tr>
                     <th>名前</th>
                     <th class = "show-name"><%= @customer.name %></th>
                  </tr>
                  <tr>
                     <th>メールアドレス</th>
                     <th class = "show-name"><%= @customer.email %></th>
                  </tr>
              </tbody>
          </table>
       </div>
       <div class='field'>
         <h3 style="display:inline">ラーメン一覧　</h3><span class=""> <%= link_to public_ramens_path(),class: "btn btn-primary" do %>  一覧を見る<% end %></span>
       </div>
    </div>
  </div>
</div>