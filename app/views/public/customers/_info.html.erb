<table class='table'>
  <tr>
	  <th>name</th>
	  <th><%= customer.name %></th>
  </tr>
  <tr>
    <th>フォロー数: </th>
    <th><%= link_to public_customer_followings_path(customer) do %><%= customer.followings.count %></th>
     <% end %>
  </tr>
  <tr>
    <th>フォロワー数: </th>
    <th><%= link_to public_customer_followers_path(customer) do %><%= customer.followers.count %></th>
    <% end %>
  </tr>
</table>
<% if customer.id == current_customer.id %>
  <p></p>
<% else %>
   <% if current_customer.following?(customer) %>
     <%= link_to "フォロー外す", public_customer_relationships_path(customer.id), class: 'btn btn-info', method: :delete %>
     <% else %>
     <%= link_to "フォローする", public_customer_relationships_path(customer.id), class: 'btn btn-success', method: :post %>
   <% end %>
<% end %>
